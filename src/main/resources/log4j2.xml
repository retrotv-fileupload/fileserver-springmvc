<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%t] %highlight{[%-5level]} %logger{36} - %msg%n"/>
        </Console>

        <!-- Request 로그 파일 -->
        <File name="RequestLogging" fileName="logs/request.log" append="true">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] %-5level %logger{36} - %msg%n"/>
        </File>

        <!-- Response 로그 파일 -->
        <File name="ResponseLogging" fileName="logs/response.log" append="true">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="warn">
            <AppenderRef ref="Console"/>
        </Root>

        <!-- dev.retrotv 패키지는 DEBUG 이상 로깅 -->
        <Logger name="dev.retrotv" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- RequestLoggingFilter 로그는 request.log에 기록 -->
        <Logger name="dev.retrotv.fileserver.common.filter.RequestLoggingFilter" level="debug" additivity="false">
            <AppenderRef ref="RequestLogging"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- ResponseLoggingFilter 로그는 response.log에 기록 -->
        <Logger name="dev.retrotv.fileserver.common.filter.ResponseLoggingFilter" level="debug" additivity="false">
            <AppenderRef ref="ResponseLogging"/>
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>